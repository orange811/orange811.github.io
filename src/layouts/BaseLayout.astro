---
interface Props {
  title?: string;
  description?: string;
}

const { title = "Piyush Jain", description = "Portfolio & Personal Website" } =
  Astro.props;
import SiteNav from "../components/SiteNav.astro";
import "../styles/global.css";
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <script is:inline>
      // Theme initialization - runs before page render to avoid flash
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        // Default to dark mode
        return "dark";
      })();

      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body
    class={`min-h-screen flex flex-col${currentPath === "/" ? " home-bg" : ""}`}
  >
    {currentPath === "/" ? <SiteNav class="md:hidden" /> : <SiteNav />}
    <main class="flex-1 container mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
    <footer class="border-t border-[rgb(var(--border-color))] mt-auto">
      <div
        class="container mx-auto px-4 sm:px-6 lg:px-8 py-6 text-center text-sm text-[rgb(var(--text-secondary))]"
      >
        <p>
          &copy; {new Date().getFullYear()} Piyush Jain. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
