---
import BaseLayout from "../layouts/BaseLayout.astro";
import LiquidGlassNav from "../components/LiquidGlassNav.astro";
---

<BaseLayout
  title="Resume - Piyush Jain"
  description="Complete professional resume"
>
  <LiquidGlassNav />
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div
      class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8"
    >
      <h1 class="text-4xl md:text-5xl font-bold mb-4 sm:mb-0">Resume</h1>
      <span class="text-sm text-[rgb(var(--text-secondary))]">
        PDF export coming later.
      </span>
    </div>

    <!-- Contact Info -->
    <section class="mb-8 p-6 bg-slate-50 dark:bg-slate-900 rounded-lg">
      <h2 class="text-xl font-bold mb-4">Contact Information</h2>
      <div class="grid sm:grid-cols-2 gap-3 text-[rgb(var(--text-secondary))]">
        <p>
          Phone: <span class="text-[rgb(var(--text-secondary))]"
            >Available upon request</span
          >
        </p>
        <p>
          Email: <span class="text-[rgb(var(--text-secondary))]"
            >Available upon request</span
          >
        </p>
        <p>
          LinkedIn: <a
            href="https://linkedin.com/in/piyushjain8"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:underline">linkedin.com/in/piyushjain8</a
          >
        </p>
        <p>
          GitHub: <a
            href="https://github.com/orange811"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:underline">github.com/orange811</a
          >
        </p>
        <p>Location: Pune, India</p>
      </div>
    </section>

    <!-- Summary -->
    <section class="mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Professional Summary</h2>
      <p class="text-[rgb(var(--text-secondary))] leading-relaxed">
        Engineering graduate specializing in artificial intelligence, with
        published research in machine sign language interpretation (Springer
        LNNS 2024) and production experience in large-scale automation at
        Hewlett Packard Enterprise. Developed real-time computer vision systems
        using landmark tracking and temporal pattern analysis, achieving 94%
        accuracy on dynamic gesture recognition. Skilled in deep learning,
        practical model development, and deploying systems under real-world
        constraints.
      </p>
    </section>

    <!-- Experience -->
    <section class="mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-6">Experience</h2>
      <p class="text-[rgb(var(--text-secondary))]">Content coming soon.</p>
    </section>

    <!-- Education -->
    <section class="mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-6">Education</h2>
      <p class="text-[rgb(var(--text-secondary))]">Content coming soon.</p>
    </section>

    <!-- Skills -->
    <section class="mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-6">Technical Skills</h2>
      <div class="space-y-4">
        <div>
          <h3 class="font-bold mb-2">Programming Languages</h3>
          <p class="text-[rgb(var(--text-secondary))]">
            Python, JavaScript, TypeScript, Java, C++
          </p>
        </div>
        <div>
          <h3 class="font-bold mb-2">Frameworks & Libraries</h3>
          <p class="text-[rgb(var(--text-secondary))]">
            React, Node.js, Express, Django, FastAPI
          </p>
        </div>
        <div>
          <h3 class="font-bold mb-2">Tools & Technologies</h3>
          <p class="text-[rgb(var(--text-secondary))]">
            Git, Docker, AWS, PostgreSQL, MongoDB
          </p>
        </div>
      </div>
    </section>

    <!-- Projects/Publications -->
    <section class="mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-6">Selected Projects</h2>
      <p class="text-[rgb(var(--text-secondary))]">Content coming soon.</p>
    </section>

    <!-- Certifications/Awards -->
    <section>
      <h2 class="text-2xl md:text-3xl font-bold mb-6">
        Certifications & Awards
      </h2>
      <ul class="space-y-3 text-[rgb(var(--text-secondary))]">
        <li>
          <span class="font-semibold text-[rgb(var(--text-primary))]"
            >Certification Name</span
          > - Issuing Organization, Year
        </li>
        <li>
          <span class="font-semibold text-[rgb(var(--text-primary))]"
            >Award Name</span
          > - Organization, Year
        </li>
      </ul>
    </section>
  </div>
</BaseLayout>
