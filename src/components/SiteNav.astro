---
const currentPath = Astro.url.pathname;
import { navLinks } from "../data/navLinks";

const isActive = (href: string) => {
  if (href === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(href);
};
import ThemeToggle from "./ThemeToggle.astro";
---

<nav
  class="site-nav md:hidden border-b border-[rgb(var(--border-color))] sticky top-0 bg-[rgb(var(--bg-primary))] z-20"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-center h-16">
      <!-- Desktop Navigation (centered) - Hidden since liquid glass nav is used on desktop -->
      <div class="hidden">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class:list={[
                "px-3 py-2 rounded-md text-sm font-medium transition-colors",
                isActive(link.href)
                  ? "bg-surface dark:bg-surface"
                  : "hover:bg-surface dark:hover:bg-surface",
              ]}
            >
              {link.label}
            </a>
          ))
        }
        <ThemeToggle />
      </div>

      <!-- Mobile menu button -->
      <div class="flex items-center md:hidden">
        <ThemeToggle />
        <details class="relative ml-2">
          <summary
            class="list-none cursor-pointer p-2 rounded-md hover:bg-surface dark:hover:bg-surface"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </summary>
          <div
            class="absolute right-0 mt-2 w-48 bg-[rgb(var(--bg-primary))] border border-[rgb(var(--border-color))] rounded-md shadow-lg py-1"
          >
            {
              navLinks.map((link) => (
                <a
                  href={link.href}
                  class:list={[
                    "block px-4 py-2 text-sm hover:bg-surface dark:hover:bg-surface",
                    isActive(link.href) ? "bg-surface dark:bg-surface" : "",
                  ]}
                >
                  {link.label}
                </a>
              ))
            }
          </div>
        </details>
      </div>
    </div>
  </div>
</nav>
